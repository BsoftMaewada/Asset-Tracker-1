<%- include('../partials/header') %>

<div id='update-asset-page'>
    <form id="update-form" href='/assets/<%= asset._id %>/update' method="POST">
        
        <div>
            <label>Name</label>
            <input type="text" name="nickname" placeholder=<%= asset.nickname %>>
        </div>
        
        <div>
            <label>Price</label>
            <input type="text" name="price" placeholder=<%= asset.price %>>    
        </div>

        <div>
            <label>Income</label>
            <input type="text" name="income" placeholder=<%= asset.income %>>
        </div>
    
        <div>
            <label>Expenses</label>
            <input type="text" name="expenses" placeholder=<%= asset.expenses %>>
        </div>

        <div>
            <label>Details</label>
            <input type="text" name="details" placeholder=<%= asset.details %>>
        </div>
    
        <input id='submit' type="submit" value="Update">
      </form>

</div>

<%- include('../partials/footer') %>